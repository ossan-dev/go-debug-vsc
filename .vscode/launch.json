{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Local Proc",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0 // selected via the Command Palette
    },
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "showGlobalVariables": true,
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal"
    },
    {
      "name": "debug-unit-test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": [
        "-test.v",
        "-test.run",
        "TestCalculateAmount" // or "TestCalculateAmount/HappyPath"
      ]
    },
    {
      "name": "debug-integration-test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "buildFlags": [
        "-tags=integration"
      ],
      "args": [
        "-test.v",
        "-test.run",
        "TestInventorySuite",
        "-testify.m", // for a specific test
        "TestAddItemHappyPath" // for a specific test
      ]
    },
    {
      "name": "ms-billing",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/ms-billing/main.go",
      "envFile": "${workspaceFolder}/ms-billing/.env",
      "env": {
        "PORT": "8081" // win if conflicts with "envfile"
      }
    },
    {
      "name": "ms-inventory",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/ms-inventory/main.go",
      "envFile": "${workspaceFolder}/ms-inventory/.env"
    },
    {
      "name": "debug-docker-container",
      "type": "go",
      "request": "attach",
      "trace": "info",
      "showLog": true,
      "debugAdapter": "dlv-dap",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1", // can be omitted for localhost
      "substitutePath": [
        {
          "from": "${workspaceFolder}/greetings-ms",
          "to": "/app"
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "ms-all",
      "configurations": [
        "ms-billing",
        "ms-inventory"
      ],
      "stopAll": true
    }
  ]
}